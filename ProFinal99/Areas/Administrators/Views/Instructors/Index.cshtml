@model IEnumerable<ProFinal99.Models.Instructor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Administrators/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InstructorName)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InstructorName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.InstructorId">Edit</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.InstructorId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.InstructorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
